<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="loadingdata.ashish.advocateapp.Activity.IndexActivity">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:src="@drawable/indexc"
    android:id="@+id/image"
    android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_below="@+id/image"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        app:cardElevation="20dp"
        app:theme="@style/Animation.AppCompat.DropDownUp"
        app:cardCornerRadius="20dp"
        android:id="@+id/newproject"
        android:layout_marginTop="28dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="match_parent"
            android:text="Add Cases"
            android:id="@+id/addcases"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        app:cardElevation="20dp"
        app:theme="@style/Animation.AppCompat.DropDownUp"
        app:cardCornerRadius="20dp"
        android:id="@+id/viewallcases"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/newproject"
        android:layout_alignStart="@+id/newproject">
        <TextView
            android:layout_width="match_parent"
            android:text="View All Cases"
            android:id="@+id/allcases"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_height="match_parent" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_marginTop="23dp"
        android:id="@+id/todaycases"
        android:layout_height="80dp"
        app:cardElevation="20dp"
        app:theme="@style/Animation.AppCompat.DropDownUp"
        app:cardCornerRadius="20dp"
        android:layout_below="@+id/viewallcases"
        android:layout_alignLeft="@+id/viewallcases"
        android:layout_alignStart="@+id/viewallcases">

        <TextView
            android:layout_width="match_parent"
            android:text="View Today Cases"
            android:id="@+id/tvtodaycases"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>


    </RelativeLayout>
</RelativeLayout>
